# ========================================
# Production Environment Configuration
# ========================================

# Environment
NODE_ENV=production
PRODUCTION_DOMAIN=fa.example.com

# Database (Production)
DB_USER=fa_prod_user
DB_PASSWORD=${SECRET_DB_PASSWORD}
DB_REPLICATION_USER=fa_replication
DB_REPLICATION_PASSWORD=${SECRET_DB_REPLICATION_PASSWORD}
DATABASE_URL=postgresql://fa_prod_user:${SECRET_DB_PASSWORD}@db-primary:5432/freelancer_aggregator

# Redis
REDIS_URL=redis://redis-primary:6379
REDIS_PASSWORD=${SECRET_REDIS_PASSWORD}

# MinIO Storage
MINIO_ROOT_USER=${SECRET_MINIO_ROOT_USER}
MINIO_ROOT_PASSWORD=${SECRET_MINIO_ROOT_PASSWORD}
MINIO_ENDPOINT=http://minio:9000

# Authentication & Security (Production Secrets)
JWT_SECRET=${SECRET_JWT_SECRET}
SESSION_SECRET=${SECRET_SESSION_SECRET}
NEXTAUTH_SECRET=${SECRET_NEXTAUTH_SECRET}
NEXTAUTH_URL=https://fa.example.com

# OAuth Providers (Production Apps)
GOOGLE_CLIENT_ID=${SECRET_GOOGLE_CLIENT_ID}
GOOGLE_CLIENT_SECRET=${SECRET_GOOGLE_CLIENT_SECRET}
GITHUB_CLIENT_ID=${SECRET_GITHUB_CLIENT_ID}
GITHUB_CLIENT_SECRET=${SECRET_GITHUB_CLIENT_SECRET}

# N8N Configuration (Production)
N8N_USER=${SECRET_N8N_USER}
N8N_PASSWORD=${SECRET_N8N_PASSWORD}
N8N_ENCRYPTION_KEY=${SECRET_N8N_ENCRYPTION_KEY}
N8N_SECURE_COOKIE=true
N8N_DISABLE_UI=false

# Monitoring & Error Tracking
LOG_LEVEL=warn
SENTRY_DSN=${SECRET_SENTRY_DSN}
GRAFANA_PASSWORD=${SECRET_GRAFANA_PASSWORD}

# Email Configuration (Production SMTP)
SMTP_HOST=${SECRET_SMTP_HOST}
SMTP_PORT=587
SMTP_USER=${SECRET_SMTP_USER}
SMTP_PASSWORD=${SECRET_SMTP_PASSWORD}
SMTP_FROM=no-reply@fa.example.com

# External Service URLs
FA_APP_URL=https://fa.example.com
FA_AUTH_URL=https://fa.example.com/auth
FA_N8N_URL=https://fa.example.com/workflows

# Performance Settings (Production Optimized)
WORKER_CONCURRENCY=10
MAX_REQUEST_SIZE=50mb
CACHE_TTL=3600
DB_POOL_SIZE=20
REDIS_MAX_CONNECTIONS=50

# Security Settings
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=https://fa.example.com
HELMET_CSP_ENABLED=true

# Feature Flags (Production)
ENABLE_TELEMETRY=true
ENABLE_DEBUG_MODE=false
ENABLE_DEVELOPMENT_TOOLS=false
ENABLE_AUDIT_LOGGING=true

# Backup Configuration
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
S3_BACKUP_BUCKET=${SECRET_S3_BACKUP_BUCKET}
S3_ACCESS_KEY=${SECRET_S3_ACCESS_KEY}
S3_SECRET_KEY=${SECRET_S3_SECRET_KEY}

# SSL/TLS Configuration
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem
SSL_DHPARAM_PATH=/etc/nginx/ssl/dhparam.pem